<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.assessment" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bubblemix 2</name>
    <description>
        Sistema de Monitoramento de Avaliações
    </description>
    <author email="emanuel.info@gmail.com" href="http://www.emanuelvictor.com">
        Emanuel Victor
    </author>
    <content src="https://d099a4f0.ngrok.io/" />
    <access origin="*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="16" />
        <preference name="android-targetSdkVersion" value="22" />
        <icon density="mdpi" src="mobile-assets/res/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="mobile-assets/res/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="mobile-assets/res/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="mobile-assets/res/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="mobile-assets/res/mipmap-xxxhdpi/ic_launcher.png" />
        <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" />
        <preference name="fullscreen" value="true" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="windows">
    </platform>
    <platform name="wp8">
    </platform>
    <allow-navigation hap-rule="yes" href="https://d099a4f0.ngrok.io/*" />
    <preference name="CRIInjectFirstFiles" value="www/js/init.js" />
    <plugin name="cordova-plugin-insomnia" spec="git+https://github.com/EddyVerbruggen/Insomnia-PhoneGap-Plugin.git" />
    <plugin name="cordova-plugin-remote-injection" spec="^0.5.2" />
    <plugin name="cordova-plugin-kiosk" spec="https://github.com/hkalina/cordova-plugin-kiosk.git" />
    <engine name="android" spec="^7.0.0" />
</widget>
